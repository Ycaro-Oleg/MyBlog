<div class="bg-white dark:bg-gray-700 rounded-lg shadow-md overflow-hidden transition-colors duration-300">
  <div class="p-6">
    <h2 class="text-2xl font-bold mb-2"><%= link_to post.title, post_path(post), class: "text-gray-900 dark:text-gray-100 hover:underline" %></h2>
    <p class="text-gray-700 dark:text-gray-300 text-sm mb-4">Published on <%= post.published_at.strftime("%B %d, %Y") %></p>
    <div class="prose dark:prose-invert max-w-none">
      <%= post.content.to_plain_text.truncate(200) %>
    </div>
    <%= link_to "Read More", post_path(post), class: "mt-4 inline-block text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300 font-medium" %>
  </div>
</div>