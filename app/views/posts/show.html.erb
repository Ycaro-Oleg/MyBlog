<div class="container mx-auto px-4">
  <h1 class="text-4xl font-bold my-8"><%= @post.title %></h1>

  <div class="prose lg:prose-xl">
    <%= @post.content %>
  </div>

  <hr class="my-8">

  <h2 class="text-2xl font-bold mb-4">Comments</h2>

  <div id="comments">
    <%= render @post.comments %>
  </div>

  <%= render "comments/form", post: @post %>
</div>